<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/banner_ad"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Banner"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/interstitial_ad"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Interstitial"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/rewarded_video_ad"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Rewarded_Video"
            android:textSize="16sp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/native_ad_advanced"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Advanced_Native"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/nativelist_ad"
            android:layout_width="200.0dip"
            android:layout_height="50.0dip"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="NativeistView"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>